<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/css/modal.css" rel="stylesheet" />        
    <link href="~/Content/css/jquery.sweet-dropdown.min.css" rel="stylesheet" />

    <script src="~/Content/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.sweet-dropdown.min.js"></script>
</head>
<body>
    <div class="header2 bg-success-gradiant">
        <!-- Header 1 code -->
            <nav class="navbar navbar-expand-lg h2-nav" style="padding: inherit;">
                <img src="~/Images/vote2.png" class="navbar-brand" style="width:63px;padding-left:1rem;margin-left:125px;" />
                <div class="collapse navbar-collapse hover-dropdown" style="padding: 0px 110px 0px 0px;">
                    <ul class="navbar-nav">
                        <li class="nav-item active"><a class="nav-link" href="#">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @*<li class="nav-item active">
                        <a class="nav-link" href="#"><i class="icon-bubble"></i> Need help?</a>
                        </li>*@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-dropdown="#navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false"> Dropdown <i class="fa fa-angle-down ml-1 font-12"></i></a>
                                <ul class="dropdown-menu dropdown-anchor-top-right dropdown-has-anchor" id="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Action</a></li>
                                    <li><a class="dropdown-item" href="#">Another action</a></li>
                                    @*<li class="divider" role="separator"></li>*@
                                    <li><a class="dropdown-item" href="#">Separated link</a></li>
                                </ul>
                        </li>
                        <li class="nav-item"><a class="btn rounded-pill btn-dark py-sm-2 px-3" href="#" data-toggle="modal" data-target="#myModal">Login</a></li>
                    </ul>
                    </div>
            </nav> <!-- End Header 1 code -->
        </div>
    <!-- The Login Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="login-box">
                    <div class="login-snip">
                        <div class="card-title text-center">
                            <h5 class="mt-5">HEY, THERE</h5><small class="para">Login to your cool account below.</small>
                        </div>
                           <div class="login-space">
                               <div class="group"><input id="user" type="text" class="input" placeholder="Enter your email account"></div>
                               <div class="group"><input id="pass" type="password" class="input" data-type="password" placeholder="Enter your password"></div>
                               <div class="group"><input type="submit" class="button" value="Sign In">  </div>
                               <div class="hr"></div>
                               <div class="foot"> <a href="#">Forgot Password?</a> </div>
                               </div>
                        </div>
                 </div>
            </div>
        </div>
    </div>
         <div class="container body-content">
             @RenderBody()
         </div>
</body>
</html>
